<table role="presentation" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <td style="padding:0; color:#f8fafc; font-size:16px;">
      <h1 style="margin:0 0 12px; font-size:24px; font-weight:700; color:#ffffff;">You won an auction</h1>
      <p style="margin:0 0 16px; line-height:1.6; color:#dfe3f0;">
        Hello <%= @user.name.presence || "there" %>, you won <strong><%= @auction.title %></strong> on X‑Bid.
      </p>
      <p style="margin:0 0 18px; line-height:1.6; color:#dfe3f0;">
        Final price: <strong><%= @settlement.final_price %> <%= @settlement.currency&.upcase %></strong>
      </p>
      <table role="presentation" cellpadding="0" cellspacing="0" style="margin:0 0 16px;">
        <tr>
          <td align="center" style="border-radius:999px; background:linear-gradient(90deg, #ff69b4, #c43de3, #a020f0);">
            <a href="<%= @wins_url %>" style="display:inline-block; padding:14px 24px; color:#ffffff; text-decoration:none; font-weight:700; font-size:15px; border-radius:999px;">
              View won auctions
            </a>
          </td>
        </tr>
      </table>
      <p style="margin:0; line-height:1.6; color:#9ca3af; font-size:13px;">
        Thanks,<br>X‑Bid
      </p>
    </td>
  </tr>
</table>

